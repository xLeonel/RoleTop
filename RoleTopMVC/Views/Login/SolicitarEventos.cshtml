@model RoleTopMVC.ViewModels.EventoViewModel

<main>
    <div id="dash">
        <div id="opcaoUser">
                <a asp-controller="Login" asp-action="MeusEventos">Meus Eventos</a>
                <a asp-controller="Login" asp-action="SolicitarEventos">Solicitar Eventos</a>
                <a asp-controller="Login" asp-action="Configuracoes">Configurações</a>
                <a asp-controller="Login" asp-action="Logoff">Sair</a>
        </div>
        <div id="content">
            <div id="formulario">
            <h2>Solicitar Evento</h2>
            <form method="POST" action='@Url.Action("SolicitarEventos","Login")'>
                <div class="form-test">
                    <label for="name">Nome</label>
                    <input type="text" value="@Model.Cliente.Nome">
                </div>
                
                <div class="form-test">
                    <label for="email">Email</label>
                    <input type="text" value="@Model.Cliente.Email" required>
                </div class="form-test">
            
                <div class="form-test">
                    <label for="telefone">Telefone</label>
                    <input type="text" value="@Model.Cliente.Celular" pattern="[0-9]{2} [9]{1}[0-9]{4}-[0-9]{4}">
                </div>

                <div class="form-test">
                    <label for="telefone">Dia do Evento</label>
                    <input type="date" placeholder="" pattern="[0-9]{2} [9]{1}[0-9]{4}-[0-9]{4}">
                </div>

                <div class="form-test">
                    <label for="evento">Tipo de Evento</label>
                    <select id="evento" required>
                        <option value="" disabled selected>Selecione</option>
                        @foreach (var evento in Model.Eventos)
                        {
                            <option value=@evento.Nome>
                                @evento.Nome
                            </option>
                        }
                    </select>
                </div>

                <div class="form-test">
                    <label for="numeroConvidados">Número de Convidados</label>
                    <input type="text" placeholder="" >
                </div>
                
                <div class="form-test">
                    <label >Sua Mensagem</label>
                    <textarea></textarea>
                </div>
                
                <div id="enviar">
                    <button type="submit">Enviar</button>
                </div>
            </form> 
        </div>
        </div>
    </div>
</main>