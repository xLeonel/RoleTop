<main>
    <div id="geral">
        <h1>Login</h1>

        <form method="POST" action='@Url.Action("Index", "Login")'>
            <div class="tabela">
                <label>Email</label>
                <input type="text" name="email">
            </div>

            <div class="tabela">
                <label>Senha</label>
                <input type="password" name="senha">
                <p class="ps"><a>Esqueceu sua senha?</a></p>
            </div>
            
            <input type="submit" value="Entrar" class="butao"/>

            <div class="linha">
                <p>NÃ£o tem uma conta?</p>
                <a asp-controller="Cadastro" asp-action="Index"><p id="register">Registre-se</p></a>
            </div>

        </form>
    </div>
    

</main>
